<?xml version="1.0" encoding="UTF-8"?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <!-- Cart validators -->
        <service id="AcademyCartExamples\Cart\MinimumOrderValueValidator">
            <tag name="shopware.cart.validator"/>
        </service>

        <service id="AcademyCartExamples\Cart\ProductAvailabilityValidator">
            <tag name="shopware.cart.validator"/>
        </service>

        <!-- Cart processors -->
        <service id="AcademyCartExamples\Cart\Processor\BulkDiscountProcessor">
            <tag name="shopware.cart.processor" priority="100"/>
        </service>

        <service id="AcademyCartExamples\Cart\Processor\B2BPromotionProcessor">
            <tag name="shopware.cart.processor" priority="90"/>
        </service>

        <service id="AcademyCartExamples\Cart\Processor\CustomShippingProcessor">
            <tag name="shopware.cart.processor" priority="80"/>
        </service>

        <service id="AcademyCartExamples\Cart\Processor\CustomTaxProcessor">
            <tag name="shopware.cart.processor" priority="70"/>
        </service>
    </services>
</container>
